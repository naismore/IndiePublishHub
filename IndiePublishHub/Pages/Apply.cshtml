@page
@model IndiePublishHub.Pages.ApplyModel
@{
    ViewData["Title"] = "Подать заявку";
}

<div class="page-header">
    <div class="container">
        <h1>@ViewData["Title"]</h1>
        <p>Станьте частью нашего сообщества инди-разработчиков</p>
    </div>
</div>

<section class="apply-section">
    <div class="container">
        <div class="apply-container">
            <div class="apply-form">
                <h2>Заявка на подключение</h2>

                @if (Model.ShowSuccessMessage)
                {
                    <div class="alert alert-success">
                        <i class="fas fa-check-circle"></i>
                        <strong>Заявка отправлена успешно!</strong>
                        <p>Мы свяжемся с вами в течение 24 часов.</p>
                        <a href="/" class="btn-secondary">На главную</a>
                    </div>
                }

                <form method="post" id="applicationForm">
                    <div class="form-group">
                        <label asp-for="Application.Name"></label>
                        <input asp-for="Application.Name" class="form-control" />
                        <span asp-validation-for="Application.Name" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Application.Email"></label>
                        <input asp-for="Application.Email" class="form-control" />
                        <span asp-validation-for="Application.Email" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Application.Phone"></label>
                        <input asp-for="Application.Phone" class="form-control" placeholder="+7 (999) 123-45-67" />
                        <span asp-validation-for="Application.Phone" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Application.Company"></label>
                        <input asp-for="Application.Company" class="form-control" placeholder="Название студии или бренда" />
                        <span asp-validation-for="Application.Company" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Application.ProjectDescription"></label>
                        <textarea asp-for="Application.ProjectDescription" class="form-control" rows="4"
                                  placeholder="Опишите вашу игру или проект..."></textarea>
                        <span asp-validation-for="Application.ProjectDescription" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Application.GamesCount">Количество игр для публикации</label>
                        <select asp-for="Application.GamesCount" class="form-control">
                            @for (int i = 1; i <= 10; i++)
                            {
                                <option value="@i">@i игра(ы)</option>
                            }
                        </select>
                    </div>

                    <div class="form-group">
                        <label>Предпочитаемые магазины</label>
                        <div class="stores-checkbox">
                            <label><input type="checkbox" name="stores" value="Steam"> Steam</label>
                            <label><input type="checkbox" name="stores" value="Epic"> Epic Games Store</label>
                            <label><input type="checkbox" name="stores" value="VK"> VK Play</label>
                            <label><input type="checkbox" name="stores" value="GOG"> GOG</label>
                        </div>
                    </div>

                    <button type="submit" class="btn-primary">
                        <i class="fas fa-paper-plane"></i> Отправить заявку
                    </button>
                </form>
            </div>

            <div class="apply-info">
                <h3>Что будет после заявки?</h3>
                <div class="timeline">
                    <div class="timeline-item">
                        <div class="timeline-number">1</div>
                        <div class="timeline-content">
                            <h4>Подтверждение</h4>
                            <p>Мы свяжемся для уточнения деталей</p>
                        </div>
                    </div>
                    <div class="timeline-item">
                        <div class="timeline-number">2</div>
                        <div class="timeline-content">
                            <h4>Настройка</h4>
                            <p>Создадим ваш личный кабинет</p>
                        </div>
                    </div>
                    <div class="timeline-item">
                        <div class="timeline-number">3</div>
                        <div class="timeline-content">
                            <h4>Интеграция</h4>
                            <p>Подключим выбранные магазины</p>
                        </div>
                    </div>
                    <div class="timeline-item">
                        <div class="timeline-number">4</div>
                        <div class="timeline-content">
                            <h4>Запуск</h4>
                            <p>Начнете публиковать игры!</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.getElementById('applicationForm').addEventListener('submit', function() {
            const stores = Array.from(document.querySelectorAll('input[name="stores"]:checked'))
                .map(cb => cb.value);
            document.getElementById('Application_PreferredStores').value = stores.join(', ');
        });
    </script>
}